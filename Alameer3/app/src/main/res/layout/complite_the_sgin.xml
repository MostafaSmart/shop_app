<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
    style="@style/DialogBackground">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_round"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="اكمال عملية التسجيل"
        style="@style/textColor2Wite_black"
        android:layout_gravity="center"

        android:textSize="17sp"
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/MyTextInputLayout"




            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/coplet_name_input"
                android:inputType="text"


                style="@style/textColor1Wite_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الاسم الكامل"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="حدد منطقة العملة"
            android:layout_gravity="start"
            style="@style/textColor1Wite_black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

        </TextView>
        <Spinner
            android:id="@+id/loction_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            style="@style/MySpinner"


            android:minHeight="48dp"
            android:padding="16dp"
            tools:ignore="SpeakableTextPresentCheck">

        </Spinner>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            style="@style/MyTextInputLayout"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/coplet_phone_input"
                android:inputType="phone"
                style="@style/textColor1Wite_black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="رقم الهاتف"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>





<android.widget.Button
    android:layout_width="wrap_content"
    android:text="دخول"
    android:id="@+id/btn_finsh_Sghn"
    android:textColor="@color/white"
    android:background="@drawable/btn_back_black"
    android:layout_gravity="end"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="50dp"
    android:layout_height="wrap_content">

</android.widget.Button>

</LinearLayout>