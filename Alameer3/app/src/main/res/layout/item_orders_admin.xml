<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    style="@style/MyCard"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="16dp"


    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:id="@+id/show_order_date"
            style="@style/textColor1Wite_black"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                style="@style/textColor2Wite_black"

                android:layout_width="wrap_content"
                android:id="@+id/show_order_costmername"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/blue_lite"
                android:id="@+id/show_order_payway"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/show_order_steate"
                style="@style/textColor1Wite_black"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/blue_lite"
                android:id="@+id/show_order_loction"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>