<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/MyCard"
    android:layout_height="250dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:id="@+id/show_all_adress"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/serch_backgrounf"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="الاسم"
                style="@style/textColor2Wite_black"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="العنوان"
                style="@style/textColor2Wite_black"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="المنطقة"
                android:layout_marginTop="16dp"
                style="@style/textColor2Wite_black"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="المدينة"
                style="@style/textColor2Wite_black"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="رقم الهاتف"
                style="@style/textColor2Wite_black"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="عنوان 1"
                style="@style/textColor2Wite_black"

                android:id="@+id/show_adres_name"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="عنوان 1"
                android:layout_marginTop="16dp"
                style="@style/textColor2Wite_black"
                android:id="@+id/show_adres1"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="عنوان 1"
                android:layout_marginTop="16dp"
                style="@style/textColor2Wite_black"
                android:id="@+id/show_adres_2"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="عنوان 1"
                android:layout_marginTop="16dp"
                style="@style/textColor2Wite_black"
                android:id="@+id/show_adres_3"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="عنوان 1"
                android:layout_marginTop="16dp"
                style="@style/textColor2Wite_black"
                android:id="@+id/show_adres_4"

                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>