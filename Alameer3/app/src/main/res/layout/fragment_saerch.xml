<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/liteBlack"
    android:layout_height="match_parent"
    tools:context=".activitys.fragmints.SaerchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/black_back_icon"
            android:id="@+id/btn_bakc_serch"
            android:layout_height="wrap_content">

        </ImageView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            app:boxStrokeColor="@color/gold"



            app:boxStrokeWidth="4dp"

            android:layout_height="wrap_content"
            android:textColorHint="#CCE7E1E1"
            app:startIconDrawable="@drawable/search_icon"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_sarech"

                android:inputType="text"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="بحث"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/shim_serac"
            android:visibility="gone"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:orientation="vertical"

                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#dddddd"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="220dp">


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#dddddd"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="220dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#dddddd"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="220dp">

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#dddddd"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="220dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#dddddd"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="220dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#dddddd"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="220dp">

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:numColumns="auto_fit"
            android:id="@+id/list_serch"
            android:layout_height="0dp">

        </GridView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>