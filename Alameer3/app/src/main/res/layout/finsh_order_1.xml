<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/backGround2"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"

        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            style="@style/MyCard"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"

            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:padding="16dp"
                android:id="@+id/btn_add_adress"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/add_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="اضافة عنوان جديد"
                    android:textColor="#CD0808"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="24dp"
            style="@style/MyCard"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"

            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:padding="16dp"
                android:id="@+id/btn_use_old_adress"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/add_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="استخدام عنوان سابق"
                    android:textColor="#CD0808"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="8dp"
            android:id="@+id/show_all_adress"
            android:paddingBottom="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/serch_backgrounf"

            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="العنوان"
                    style="@style/textColor1Wite_black"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="المنطقة"
                    style="@style/textColor1Wite_black"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="المدينة"
                    style="@style/textColor1Wite_black"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="رقم الهاتف"
                    android:layout_marginTop="16dp"
                    style="@style/textColor1Wite_black"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="عنوان 1"
                    android:id="@+id/show_adres1"
                    style="@style/textColor2Wite_black"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="عنوان 1"
                    android:layout_marginTop="16dp"
                    android:id="@+id/show_adres_2"
                    style="@style/textColor2Wite_black"

                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="عنوان 1"
                    android:layout_marginTop="16dp"

                    android:id="@+id/show_adres_3"
                    style="@style/textColor2Wite_black"

                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="عنوان 1"
                    android:layout_marginTop="16dp"
                    style="@style/textColor2Wite_black"

                    android:id="@+id/show_adres_4"

                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="عنوان"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/add_name_hidin"
                    style="@style/textColor2Wite_black"

                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="عنوان"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/delevr_coust_hidden"
                    style="@style/textColor2Wite_black"

                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <android.widget.Button
        android:textColor="@color/white"
        android:elevation="8dp"
        android:id="@+id/go_to_travel_opttions"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_nav_background"
        android:text="اكمال الشراء"
        android:layout_height="wrap_content">

    </android.widget.Button>
</LinearLayout>