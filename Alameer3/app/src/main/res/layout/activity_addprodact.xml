                                android:text="سعر خاص بالجنوب"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/add_prod_spti_price"
                                android:visibility="gone"
                                android:hint="سعر خاص بالجنوب اذا وجد"
