<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/backGround2"

    android:layoutDirection="rtl"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/baceToolBar"
        style="@style/TapStayle"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingEnd="@dimen/spacing_standard"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="2"


            style="@style/MyTextInputLayout"

            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/search_icon"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/serch_bace"

                android:inputType="text"

                style="@style/textColor1Wite_black"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="@color/gold"
                android:hint="بحث"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"


            android:layout_gravity="center"
            android:gravity="end"
            android:id="@+id/shareL"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_gravity="center"
                android:id="@+id/salah_short_bac"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"

                    android:src="@drawable/ic_baseline_add_shopping_cart_24"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sala_count_bace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/raound_red_background"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"



                    android:text="0"
                    android:textColor="@color/white" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/show_loging"
        android:layout_width="match_parent"
        app:shimmer_highlight_color="@color/llit_gole"


        app:shimmer_auto_start="true"



        app:shimmer_clip_to_children="true"


        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#dddddd"
                android:layout_marginStart="24dp"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"

                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"


                android:gravity="center"

                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:padding="10dp"



                    android:gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="#dddddd"


                    android:layout_height="40dp">


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:padding="10dp"



                    android:gravity="center"
                    android:layout_marginStart="50dp"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="#dddddd"


                    android:layout_height="40dp">


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:padding="10dp"
                    android:layout_marginStart="50dp"



                    android:gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="#dddddd"


                    android:layout_height="40dp">


                </androidx.cardview.widget.CardView>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:paddingTop="2dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"

                    android:layout_height="240dp"




                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#dddddd"


                    >


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:paddingTop="2dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"

                    android:layout_height="240dp"




                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#dddddd"


                    >


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:paddingTop="2dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"

                    android:layout_height="240dp"




                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#dddddd"


                    >


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="150dp"
                    android:background="#dddddd"

                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"

                    android:layout_height="240dp">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:paddingTop="2dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"

                    android:layout_height="240dp"




                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#dddddd"


                    >


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:paddingTop="2dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"

                    android:layout_height="240dp"




                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#dddddd"


                    >


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:paddingTop="2dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"

                    android:layout_height="240dp"




                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#dddddd"


                    >


                </androidx.cardview.widget.CardView>


            </LinearLayout>








        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/baceToolBar"
        android:visibility="gone"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/main"

                android:layout_height="@dimen/_200sdp">





                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"




                    app:cardCornerRadius="15dp"

                    />



                <!--                    </androidx.cardview.widget.CardView>-->

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/worm_dots_indicator_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/blue_lite"
                    app:dotsCornerRadius="8dp"

                    app:dotsSize="10dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="2dp"
                    app:dotsSpacing="4dp"
                    app:dotsStrokeColor="@color/blue_lite"
                    app:dotsStrokeWidth="1dp"
                    />




            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"




                android:layout_margin="@dimen/spacing_standard_new"




                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/short_1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"

                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="@dimen/spacing_medium"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_catogry1"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/textColor1Wite_black"
                        android:textSize="12sp"
                        android:text="الاقسام"
                        android:layout_height="wrap_content">

                    </TextView>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/short_2"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"

                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="@dimen/spacing_medium"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_favorite2"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        style="@style/textColor1Wite_black"
                        android:text="المفضلة"
                        android:layout_height="wrap_content">

                    </TextView>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/short_3"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"

                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="@dimen/spacing_medium"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_offer2"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="العروض"
                        style="@style/textColor1Wite_black"
                        android:layout_height="wrap_content">

                    </TextView>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/short_4"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"

                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="@dimen/spacing_medium"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_order2"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/textColor1Wite_black"
                        android:textSize="12sp"
                        android:text="طلباتي"
                        android:layout_height="wrap_content">

                    </TextView>





                </LinearLayout>



            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"

                android:padding="@dimen/spacing_standard"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="العروض"
                    android:textStyle="bold"
                    style="@style/textColor2Wite_black"
                    android:textSize="@dimen/font_size_small"
                    android:layout_alignParentStart="true"

                    android:layout_height="wrap_content">

                </TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="المزيد"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_small"
                    android:id="@+id/more_descount"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/blue_lite"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>


            <GridView
                android:layout_width="match_parent"
                android:numColumns="auto_fit"
                android:id="@+id/grid_base1"


                android:padding="@dimen/spacing_standard"
                android:layout_height="@dimen/_400sdp">

            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/list_item_bysection"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>