<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    style="@style/backGround1"
    tools:context=".activitys.activty.ComliteorderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_complite_order"
                android:layout_width="wrap_content"
                android:src="@drawable/black_back_icon"
                android:layout_height="wrap_content">

            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"

                android:textSize="17sp"


                style="@style/textColor2Wite_black"
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/tital_complite_order"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"

                    android:id="@+id/radioB_address"
                    android:buttonTint="@color/llit_gole"
                    android:layout_height="wrap_content"
                    android:checked="true">
                </RadioButton>
                <TextView
                    style="@style/textColor2Wite_black"
                    android:layout_width="wrap_content"
                    android:text="العنوان"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:id="@+id/radioB_payment"
                    android:buttonTint="@color/llit_gole"
                    android:layout_height="wrap_content"
                    >
                </RadioButton>
                <TextView
                    style="@style/textColor2Wite_black"
                    android:layout_width="wrap_content"
                    android:text="الدفع"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/com_main"
            android:layout_height="0dp">

            <include layout="@layout/finsh_order_1"/>

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>