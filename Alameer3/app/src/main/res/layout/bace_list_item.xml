<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
  android:layout_marginBottom="10dp"
    style="@style/backGround2"
    android:background="#F5F5F5"
    android:layout_height="wrap_content">





            <LinearLayout
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                style="@style/backGround2"

                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:id="@+id/tit_2"


                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ريزن"
                    style="@style/textColor2Wite_black"
                    android:textSize="@dimen/font_size_small"
                    android:id="@+id/section_item_tital"

                    android:textStyle="bold"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/section_item_go"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="المزيد"
                    android:textColor="@color/blue_lite_300"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/section_item_list"
            android:layout_width="match_parent"
            style="@style/backGround1"

            android:layout_height="match_parent" />


</LinearLayout>