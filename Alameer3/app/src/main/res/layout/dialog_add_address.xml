<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp"
    style="@style/DialogBackground">



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/card_show_old_address"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/card_add_new_address"
            android:visibility="gone"
            android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">




                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_remove_round"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="الاسم"

                            style="@style/textColor1Wite_black"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">

                        </TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            style="@style/MyTextInputLayout"

                            >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_fall_name"
                                    android:inputType="text"
                                    android:padding="8dp"


                                    style="@style/textColor1Wite_black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="الاسم الرباعي"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="المدينة"

                            style="@style/textColor1Wite_black"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">

                        </TextView>

                        <Spinner
                            android:id="@+id/country_spinner"

                            style="@style/MySpinner"
                            android:paddingTop="20dp"
                            android:layout_marginTop="8dp"
                            android:paddingBottom="20dp"


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="المنطقة"
                            android:layout_marginTop="16dp"
                            style="@style/textColor1Wite_black"

                            android:layout_height="wrap_content">

                        </TextView>
                        <Spinner
                            android:id="@+id/city_spinner"

                            android:paddingTop="20dp"

                            style="@style/MySpinner"
                            android:layout_marginTop="8dp"
                            android:paddingBottom="20dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="العنوان"
                            style="@style/textColor1Wite_black"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">

                        </TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            style="@style/MyTextInputLayout"

                            >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_fall_adress"
                                    android:inputType="text"
                                    android:padding="8dp"

                                    style="@style/MyTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="عنوانك بشكل اكثر تفصيلاً"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="رقم الهاتف"
                            android:layout_marginTop="16dp"
                            style="@style/textColor1Wite_black"
                            android:layout_height="wrap_content">

                        </TextView>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            style="@style/MyTextInputLayout"

                            >



                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_phone_order"
                                    android:inputType="phone"
                                    android:padding="8dp"
                                    style="@style/textColor1Wite_black"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="رقم الهاتف"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:text="حفظ العنوان"
                            style="@style/textColor2Wite_black"
                            android:id="@+id/chick_save_address"
                            android:layout_height="wrap_content">

                        </CheckBox>

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="اضافة"
                            android:background="@drawable/btn_back_black"
                            android:textColor="@color/white"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="end"
                            android:id="@+id/btn_finsh_add_adress"
                            android:layout_height="wrap_content">

                        </android.widget.Button>




                </LinearLayout>


        </ScrollView>



</LinearLayout>