<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    style="@style/backGround2"
    tools:context=".activitys.activty.VerificationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginTop="20sp"

                        style="@style/textColor1Wite_black"
                        android:text="التحقق من البريد الالكتروني"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"

                        android:layout_marginTop="20sp"
                        style="@style/textColor1Wite_black"

                        android:text="سيتم ارسال رمز التحقق الى بريدك الالكتروني \nقم بالضغط على الرابط الذي سيصل الى بريدك وستتم العملية بشكل تلقائي \nبعد ذلك يمكنك تسجيل الدخول مباشرة  "
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        style="@style/MyTextInputLayout"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/show_email_vald"
                            android:inputType="text"
                            android:enabled="false"


                            style="@style/textColor1Wite_black"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            tools:ignore="TouchTargetSizeCheck" />
                    </com.google.android.material.textfield.TextInputLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:id="@+id/prog_send_code"
                        android:layout_height="wrap_content">

                    </ProgressBar>
                    <android.widget.Button
                        android:id="@+id/btn_send_emeil_code"
                        android:layout_width="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="24dp"
                        android:text="'طلب الكود' "
                        android:background="@drawable/btn_back_black"
                        android:textColor="@color/white"

                        android:layout_height="match_parent">

                    </android.widget.Button>

                    <android.widget.Button
                        android:id="@+id/btn_send_emeil_close"
                        android:layout_width="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="24dp"
                        android:text="التراجع "
                        android:background="@drawable/items_background1"
                        android:textColor="@color/white"

                        android:layout_height="match_parent">

                    </android.widget.Button>


                </LinearLayout>

            </LinearLayout>






        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>