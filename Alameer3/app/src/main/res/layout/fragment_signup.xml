<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
 android:layoutDirection="rtl"
    android:layout_height="match_parent"
    style="@style/backGround1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitys.fragmints.SignupFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            style="@style/MyTextInputLayout"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sign_name_input"
                                android:inputType="text"


                                style="@style/textColor1Wite_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="الاسم الكامل"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            style="@style/MyTextInputLayout"

                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sgin_email_input"
                                android:inputType="textEmailAddress"
                                style="@style/textColor1Wite_black"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="البريد الالكتروني"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="حدد منطقة العملة"
                            android:layout_marginTop="16dp"
                            style="@style/textColor1Wite_black"
                            android:layout_marginStart="16dp"
                            android:layout_height="wrap_content">

                        </TextView>
                        <Spinner
                            android:id="@+id/loction_input_sigin"
                            style="@style/MySpinner"


                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="4dp"



                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_height="wrap_content">

                        </Spinner>






                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            style="@style/MyTextInputLayout"


                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sgin_phone_input"
                                android:inputType="number"

                                style="@style/textColor1Wite_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ادخل رقم الهاتف"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"

                            style="@style/MyTextInputLayout"


                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sgin_password_input"
                                android:inputType="textPassword"


                                style="@style/textColor1Wite_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="كلمة المرور"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:id="@+id/prog_sginup"
                            android:layout_height="wrap_content">

                        </ProgressBar>
                        <android.widget.Button
                            android:id="@+id/btn_sginUp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="24dp"
                            android:text="تسجيل "
                            android:background="@drawable/btn_back_black"
                            android:textColor="@color/white"

                            android:layout_height="match_parent">

                        </android.widget.Button>

                        <android.widget.Button
                            android:id="@+id/btn_sginUp_google"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_gravity="center"
                            android:padding="24dp"

                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="24dp"
                            android:drawableStart="@drawable/google_icon"
                            android:text="   تسحيل الدخول بحساب جوجل"
                            android:visibility="gone"
                            android:background="@drawable/btn_back_wite"
                            android:textColor="@color/black"

                            android:layout_height="match_parent">

                        </android.widget.Button>
                    </LinearLayout>

                </LinearLayout>






        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>