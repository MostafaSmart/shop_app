<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    style="@style/backGround2"
    tools:context=".activitys.activty.OrderDitalsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_orderDitel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_back_icon">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textColor2Wite_black"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:text="تفاصيل الطلب">

                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                style="@style/textColor1Wite_black"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="حالة الطلب">

            </TextView>

            <RadioGroup

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_backgroung"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:id="@+id/RG_order_updiet"
                android:paddingTop="16dp"
                android:paddingEnd="10dp"
                android:visibility="gone"

                android:paddingBottom="16dp">

                <RadioButton
                    android:id="@+id/ad_new_order_rb"
                    android:layout_width="wrap_content"
                    style="@style/textColor2Wite_black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="طلب جديد"></RadioButton>

                <RadioButton
                    android:id="@+id/deel_done_rb"
                    android:layout_width="wrap_content"
                    style="@style/textColor2Wite_black"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="تمت المعالجة">

                </RadioButton>



            </RadioGroup>
            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="تحديث حالة الطلب"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:background="@color/llit_gole"
                android:visibility="gone"

                android:id="@+id/updeite_state"
                android:layout_height="wrap_content">

            </android.widget.Button>
            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="حذف الطلب اذا كان قديم"
                android:textColor="@color/white"
                android:visibility="gone"

                android:background="@color/llit_gole"
                android:id="@+id/delete_state"
                android:layout_height="wrap_content">

            </android.widget.Button>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/prog_order_detel"
                android:visibility="gone"
                android:layout_height="wrap_content">

            </ProgressBar>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                style="@style/MyCard"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="طريقة الدفع">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="اسم العميل">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="العملة">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="المدينة">

                        </TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="المنطقة">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="العنوان">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="رقم الهاتف">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="16dp"
                            android:text="قيمة المشتريات كاملة">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/costmor_pay_way"
                            android:layout_width="wrap_content"
                            style="@style/textColor2Wite_black"

                            android:layout_height="wrap_content"

                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_marginTop="15sp"
                            android:id="@+id/costmor_name"
                            style="@style/textColor2Wite_black"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_marginTop="15sp"
                            android:id="@+id/costmor_monyState"
                            style="@style/textColor2Wite_black"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/cost_contry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            style="@style/textColor2Wite_black"

                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/cost_city"
                            android:layout_width="wrap_content"
                            style="@style/textColor2Wite_black"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/cost_adress"
                            android:layout_width="wrap_content"
                            style="@style/textColor2Wite_black"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/cost_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textColor2Wite_black"

                            android:layout_marginTop="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/cost_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/red"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <android.widget.Button
                android:id="@+id/btn_call_the_costmer"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="التواصل مع العميل"
                android:textColor="@color/white"
                android:background="@color/llit_gole"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/btn_bils_order_out"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text=" فاتورة رقمية"
                android:textColor="@color/white"
                android:paddingEnd="24dp"
                android:paddingStart="24dp"

                android:background="@drawable/items_background1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

            </android.widget.Button>


            <android.widget.Button
                android:id="@+id/btn_cansel_order"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="الغاء الطلب"
                android:textColor="@color/white"
                android:paddingEnd="24dp"
                android:paddingStart="24dp"
                android:background="@drawable/btn_back_black"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

            </android.widget.Button>
            <TextView
                android:layout_width="wrap_content"
                android:text="المنتجات المطلوبة"
                android:layout_margin="16dp"
                style="@style/textColor1Wite_black"

                android:layout_height="wrap_content">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                style="@style/MyCard"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"

                    android:id="@+id/list_order_detels"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>




            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>